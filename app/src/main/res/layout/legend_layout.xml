<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6">

        <ImageView
            android:id="@+id/imageViewLegend"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:layout_column="0" />

        <TextView
            android:id="@+id/textViewLegendGreen"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1" />

        <TextView
            android:id="@+id/textViewLegendYellow"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1" />

        <TextView
            android:id="@+id/textViewLegendOrange"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1" />

        <TextView
            android:id="@+id/textViewLegendLightRed"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1" />

        <TextView
            android:id="@+id/textViewLegendRed"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1" />

    </GridLayout>

    <Button
        android:id="@+id/buttonCloseLegend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/button"
        android:text="@string/btn_close" />

</LinearLayout>